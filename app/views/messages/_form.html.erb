<%= form_for(message) do |f| %>


  <div class="field">
    <%= f.label :author_id %><br />
    <%= f.number_field :author_id %>
  </div>

  <div class='field'>
    <%= collection_select(:message, :org_id, Org.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
